<%- include('../partials/header'); -%>
<%- include('../partials/menu') %>
<body>
  <main>
    <div class="" style="background-color: pink;">
      <div class="container-fluid" style="padding: 2%; ">
        <form class="" action="/get_feed" method="post">
          <div class="row">
            <div class="col-3">

            </div>
            <div class="col-5">
              <input class="form-control" type="text" name="name" placeholder="Enter Cocktail Name">
            </div>
            <div class="col-1">
              <input class="btn btn-light" type="submit" name="Submit" value = "Submit"/>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="container-lg" style="margin-top: 2%;">
      <% if (error) { %>
        <div class="alert alert-danger"><%- message %></div>
      <% } %> 

      <% if (item) {  %>
        <img src="<%= item.strDrinkThumb %>/preview" alt="image" ></img>
        <h3> <%= item.strDrink %></h3>
        <br>
        <h6>Alcoholic:</h6>
        <p><%= item.strAlcoholic %></p>
        <h6>Glass Type:</h6>
        <p><%= item.strGlass %></p>
        <h6>Instructions:</h6>
        <p><%= item.strInstructions %></p>
        <a type= "button" class="btn btn-light" data-toggle="modal" data-target="#reviewModal">Add a review</a>
      <% } %> 
    </div>

    <div class="modal fade" id="reviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add a Review</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="" action="/add_review" method="post">
              <div class="form-group">
                <label for="cocktail-name" class="col-form-label">Cocktail Name:</label>
                <input type="text" class="form-control" id="drink" placeholder="<%= item.strDrink %>" disabled>
              </div>
              <div class="form-group">
                <label for="review_text" class="col-form-label">Enter your review here:</label>
                <input class="form-control" type="text" name="review" placeholder="Enter Cocktail Name">
              </div>
              <input type="hidden"  name="drink_id" value="<%= item.idDrink %>">
              <input type="hidden"  name="drink_name" value="<%= item.strDrink %>">
              <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-light" >Save changes</button>
              </div>
            </form>
          </div>
         
        </div>
      </div>
    </div>

  </main>
</body>
<%- include('../partials/footer'); -%>