<%- include('../partials/header') %>
<%- include('../partials/menu') %>
	<div class="container">
		<br>

		<form class="" action="/filter_reviews" method="get">
      <div class="row">
        <div class="col-3">

        </div>
        <div class="col-5">
          <input class="form-control" type="text" name="filter_drink" placeholder="Enter a Cocktail Name">
        </div>
        <div class="col-1">
          <input class="btn btn-light" type="submit" name="submit" value = "Filter"/>
        </div>
      </div>
    </form>

		<table class="table table-bordered" id="reviews_table">
			<tr>
				<th class="align-bottom" rowspan="1">Drink</th>
				<th class="align-bottom"rowspan="1">Review</th>
				<th class="align-bottom" rowspan="1">Review Date</th>
      </tr>
      <% for(var i=0; i < data.length; i++) { %>
				<tr>
					<td><%= data[i].cocktail_title %></td>
					<td><%= data[i].review %></td>
					<td><%= data[i].review_date %></td>
				</tr>
      <% } %>
		</table>
		
	</div>
</body>
<%- include('../partials/footer') %>